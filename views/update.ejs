<%- include ('partials/header') %>
<div class="container">
<h2>Update Movie</h2>
    <form action="/videos/<%= video._id%>?_method=PUT" method="POST">
    <div class="form-group">
        <label for="title">Title</label>
        <input type="text" name="title" class="form-control" value="<%= video.title %>">
    </div>
    <div class="form-group">
        <label for="genre">Genre</label>
        <input type="text" name="genre" class="form-control" value="<%= video.genre %>">
    </div>
    <div class="form-group">
        <label for="image">Image</label>
        <input type="text" name="image" class="form-control" value="<%= video.image %>">
    </div>
    <div class="form-group">
        <label for="desc">Description</label>
        <textarea  name="desc" class="form-control"><%= video.description %></textarea>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-info">Update</button>
    </div>
    </form>

    <a href="/videos/<%=video._id%>">Cancel</a>
</div>
<%-include ('partials/footer') %>